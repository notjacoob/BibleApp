@model BibleApp.Models.View.VerseViewModel

<div class="container d-flex flex-lg-row flex-column gap-lg-3 gap-2 align-items-center my-1">
    <div class="d-flex flex-row gap-2 align-items-center">
        <span style="width: 16px; height: 16px;">
        <svg style="z-index: 1; vertical-align: text-top;" onclick="copyVerse(@Model.VerseId, event)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z"/>
            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z"/>
        </svg></span>
        <span id="verse-title-@Model.VerseId" class="highlightable-vn align-lg-middle" style="color: cyan; font-weight: bold; white-space: nowrap;">@Model.VerseTitle</span>
    </div>

    <span id="verse-text-@Model.VerseId" class="highlightable-vt align-lg-middle text-lg-start text-center">@Model.VerseText</span>
</div>
<script src="~/js/search.js"></script>
<script src="~/js/verse_general.js"></script>
<div class="align-items-center justify-content-center d-flex flex-column gap-3">
    <div id="share-success-alert" class="alert alert-success fade position-fixed z-2" style="display: none; width: 95%; top: 1%;" role="alert">
        Copied to clipboard!
    </div>
    <div class="d-flex flex-row gap-2 justify-content-center align-items-center">
        <label for="search-term">Search</label>
        <input type="text" id="search-term" name="searchTerm" placeholder="Enter search here..."/>
        <div class="dropdown align-items-center justify-content-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="search-in-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Search In
            </button>
            <ul class="dropdown-menu" aria-labelledby="search-in-dropdown">
                <li>
                    <label for="search-in-vn">Verse Name</label>
                    <input type="checkbox" id="search-in-vn"/>
                </li>
                <li>
                    <label for="search-in-vt">Verse Text</label>
                    <input type="checkbox" id="search-in-vt"/>
                </li>
            </ul>
        </div>
        <div class="dropdown align-items-center justify-content-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="testament-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Testament
            </button>
            <ul class="dropdown-menu" aria-labelledby="testament-dropdown">
                <li>
                    <label for="search-in-ot">Old Testament</label>
                    <input type="checkbox" checked id="search-in-ot"/>
                </li>
                <li>
                    <label for="search-in-nt">New Testament</label>
                    <input type="checkbox" checked id="search-in-nt"/>
                </li>
            </ul>
        </div>
        <div class="dropdown align-items-center justify-content-center">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="match-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Match By
            </button>
            <ul class="dropdown-menu" style="text-align: left; padding-left: 25%" aria-labelledby="match-dropdown">
                <li class="form-check">
                    <input class="form-check-input" type="radio" name="match-radio" value="any" id="match-radio-any" checked/>
                    <label class="form-check-label" for="match-radio-any">
                        Any Text
                    </label>
                </li>
                <li class="form-check">
                    <input class="form-check-input" type="radio" name="match-radio" value="word" id="match-radio-word"/>
                    <label class="form-check-label" for="match-radio-word">
                        Full Word
                    </label>
                </li>
                <li class="form-check">
                    <input class="form-check-input" type="radio" name="match-radio" value="phrase" id="match-radio-phrase"/>
                    <label class="form-check-label" for="match-radio-phrase">
                        Full Phrase
                    </label>
                </li>
            </ul>
        </div>
        <button class="btn btn-primary" onclick="doSearch()">Search</button>
    </div>
    <ul class="list-group" id="search-results">

    </ul>
</div>

<div class="modal" tabindex="-1" role="dialog" id="comments-modal">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            checkUrlSearch()
        })
    </script>
}
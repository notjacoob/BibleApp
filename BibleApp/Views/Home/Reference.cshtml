@model BibleApp.Models.View.ReferenceViewModel
<script src="~/js/verse_general.js"></script>
<script src="~/js/reference.js"></script>
<input type="hidden" id="book-num" value="-1"/>
<input type="hidden" id="chapter-num" value="-1"/>
<div class="align-items-center justify-content-center d-flex flex-column gap-3">
    <div id="share-success-alert" class="alert alert-success fade position-fixed z-2" style="display: none; width: 95%; top: 1%;" role="alert">
        Copied to clipboard!
    </div>
    <div class="d-flex flex-row gap-3">
        @Html.Partial("_BookSelector", Model.Books)
        <div id="chapter-selector">
            <!-- replaced by JS -->
        </div>
    </div>
    <ul class="list-group" id="verses">
    </ul>
</div>
<div class="modal" tabindex="-1" role="dialog" id="comments-modal">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            checkUrlRef()
        })
    </script>
}
